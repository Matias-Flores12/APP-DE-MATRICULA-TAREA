<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumenMatriculaActivity">

    <TextView
        android:id="@+id/textViewResumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumen de Matrícula"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textViewEscuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escuela: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewResumen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewCarrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrera: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewEscuela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewCarnetBiblioteca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carnet Biblioteca: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarrera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewCarnetMedioPasaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carnet Medio Pasaje: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarnetBiblioteca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Agrega el TextView para mostrar el número de cuotas -->
    <TextView
        android:id="@+id/textViewCuotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuotas: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarnetMedioPasaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Agrega el TextView para mostrar el total a pagar -->
    <TextView
        android:id="@+id/textViewTotalPagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total a pagar: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewCuotas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Puedes agregar más elementos TextView para mostrar otros detalles si es necesario -->

</androidx.constraintlayout.widget.ConstraintLayout>
